---
import SeriesList from "../components/SeriesList.astro";
import BlogPost from "./BlogPost.astro";

type Props = {
    slug: string;
    title: string;
    description: string;
    pubDate?: Date;
};

const { title, ...props } = Astro.props;
---

<BlogPost title={title} {...props} transitionAnimate="slide">
    <slot />
    <SeriesList series={title} />
</BlogPost>
