---
import type { HTMLAttributes } from "astro/types";
import type { IconNode } from "lucide";
import LucideIcon from "./LucideIcon.astro";

type Props = HTMLAttributes<"a"> & {
    icon: IconNode;
    text: string;
    index: number;
};

const { href, icon, text, index } = Astro.props;
---

<a
    href={href}
    target="_blank"
    class="social-link block p-2 rounded-lg text-base-600 hover:bg-base-200 hover:dark:bg-base-800 dark:text-base-500"
    style={{ "--animation-wait": `${0.5 + index * 0.1}s` }}
>
    <LucideIcon icon={icon} class="h-5 w-5" />
</a>

<style>
    .social-link {
        --fly-in-y: -4rem;
        --fly-in-opacity: 0.5;
        --animation-wait: 0s;
        animation:
            var(--animation-wait) ease-out 0s 1 wait,
            0.6s ease-out var(--animation-wait) 1 flyIn;
    }
</style>
