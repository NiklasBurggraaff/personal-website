---
import type { HTMLAttributes } from "astro/types";
import type { IconNode } from "lucide";
import LucideIcon from "./LucideIcon.astro";

type Props = HTMLAttributes<"a"> & {
    icon: IconNode;
    text: string;
    index: number;
};

const { href, icon, text, index } = Astro.props;
---

<a
    href={href}
    target="_blank"
    class="social-link block h-14 w-14 text-base-600 hover:scale-105 hover:!text-primary hover:brightness-125 dark:text-base-500"
    style={{ "--animation-wait": `${0.5 + index * 0.2}s` }}
>
    <div class="flex h-full w-full flex-col items-center justify-center">
        <LucideIcon icon={icon} class="h-6 w-6" />
        <p class="text-xs">{text}</p>
    </div>
</a>

<style>
    .social-link {
        --fly-in-y: -4rem;
        --fly-in-opacity: 0.5;
        --animation-wait: 0s;
        animation:
            var(--animation-wait) ease-out 0s 1 wait,
            0.6s ease-out var(--animation-wait) 1 flyIn;
    }
</style>
